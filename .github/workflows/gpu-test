name: gpu-test

on:
  workflow_dispatch:

permissions: read-all


jobs:
  test:
    runs-on: [self-hosted]
    steps:
      - uses: actions/checkout@v4

      - run: ${{env.RUST_CUDA_ROOT}}/scripts/update-test-report.ps1
        shell: pwsh

      - run: |
          ${{env.PYTHON_CUDA_ROOT}}/scripts/build-cuda.ps1
          ${{env.PYTHON_CUDA_ROOT}}/scripts/pytest.ps1
        shell: pwsh

      - run: |
          git add .
          git commit -m "chore: update test reports" || echo "No changes to commit"
          git push
